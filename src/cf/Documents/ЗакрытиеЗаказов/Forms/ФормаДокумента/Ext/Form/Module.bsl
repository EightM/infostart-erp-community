	ТекущиеДанные=Элементы.Заказы.ТекущиеДанные;
	
	Если стрКолонка="Заказ" Тогда
		СтандартнаяОбработка=Ложь;
		Если Объект.Организация.Пустая() Тогда
			ПоказатьПредупреждение(, "Укажите организацию", 20);
			Возврат;
		КонецЕсли;
		ПараметрыФормы=Новый Структура;
		ПараметрыФормы.Вставить("РежимВыбора", Истина);
		ПараметрыФормы.Вставить("Отбор", Новый Структура("Организация", Объект.Организация));
		ОткрытьФорму("Документ."+ВидДокументаПоТипуПеречисления()+".ФормаВыбора", ПараметрыФормы, Элемент, УникальныйИдентификатор,,,,РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
	КонецЕсли;
КонецПроцедуры

&НаСервере
Процедура тпЗаказы_Заполнить(стрКоманда)
	Если стрКоманда="ЗаполнитьПоОстаткам" Тогда
		стрВидДокумента=ВидДокументаПоТипуПеречисления();
		Если стрВидДокумента="ВнутреннийЗаказ" Тогда
			стрРегистр="ВнутренниеЗаказы";
		ИначеЕсли стрВидДокумента="ЗаказПокупателя" Тогда
			стрРегистр="ЗаказыПокупателей";
		ИначеЕсли стрВидДокумента="ЗаказПоставщику" Тогда
			стрРегистр="ЗаказыПоставщикам";
		КонецЕсли;
		Запрос=Новый Запрос;
		Запрос.УстановитьПараметр("МоментДокумента", Объект.Дата);
		Запрос.УстановитьПараметр("Организация", Объект.Организация);
		Запрос.Текст="
		|ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	ИсточникДанных."+стрВидДокумента+" Как Заказ
		|ИЗ
		|	РегистрНакопления."+стрРегистр+".Остатки(&МоментДокумента, Организация=&Организация) КАК ИсточникДанных
		|";
		Выборка=Запрос.Выполнить().Выбрать();
		Пока Выборка.Следующий() Цикл
			НоваяСтрока=Объект.Заказы.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Выборка);
			НоваяСтрока.ID=Строка(Новый УникальныйИдентификатор);
		КонецЦикла;
	КонецЕсли;
КонецПроцедуры

