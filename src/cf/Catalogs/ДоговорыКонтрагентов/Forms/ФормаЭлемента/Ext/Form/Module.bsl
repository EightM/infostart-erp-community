	СобытияФормыСервер.ПриСозданииНаСервере(Отказ, СтандартнаяОбработка, ЭтаФорма, Объект);
	Если Объект.Ссылка.Пустая() Тогда
		Если Объект.ВалютаВзаиморасчетов.Пустая() Тогда
			Объект.ВалютаВзаиморасчетов=Константы.ВалютаРегламентированногоУчета.Получить();
		КонецЕсли;
		Если Объект.Организация.Пустая() Тогда
			Объект.Организация=УправлениеПользователямиСервер.ПолучитьЗначениеПоУмолчанию("ОсновнаяОрганизация");
		КонецЕсли;
	КонецЕсли;	
